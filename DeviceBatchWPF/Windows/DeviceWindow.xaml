                <ContentPresenter Height="Auto" Width="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="{Binding ActiveUserControl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

