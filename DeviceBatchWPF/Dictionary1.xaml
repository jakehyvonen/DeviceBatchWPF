<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Converters="clr-namespace:DeviceBatchWPF.Scheduling.Converters"
                    xmlns:Jarloo="clr-namespace:DeviceBatchWPF.Scheduling"
                    >
    <DataTemplate x:Key="DefaultDataTemplate">
        <Label>DepositionMethod not assigned</Label>
    </DataTemplate>
    <DataTemplate x:Key="UnknownDataTemplate">
        <StackPanel>
            <Label>Unmapped Layer</Label>
            <TextBox 
                MaxWidth="77"
                TextWrapping="Wrap"
                Text="{Binding SpreadSheetCellText}">

            </TextBox>
        </StackPanel>
    </DataTemplate>
    <DataTemplate x:Key="LifetimesDataTemplate">
        <Border Background="SkyBlue" BorderBrush="DarkGray" BorderThickness="1">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{Binding Label,UpdateSourceTrigger=PropertyChanged}" FontWeight="DemiBold" HorizontalAlignment="Center"/>
                <WrapPanel>
                    <TextBlock Text="Initial cd/m&#x00B2;: "></TextBlock>
                    <TextBlock Text="{Binding TheLifetime.InitialLuminance,UpdateSourceTrigger=PropertyChanged}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Set mA/cm&#x00B2;: "></TextBlock>
                    <TextBlock Text="{Binding TheLifetime.SetCurrentDensity,UpdateSourceTrigger=PropertyChanged}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Initial cd/A: "></TextBlock>
                    <TextBlock Text="{Binding TheLifetime.InitialCE,UpdateSourceTrigger=PropertyChanged}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="T90 (hrs): "></TextBlock>
                    <TextBlock Text="{Binding TheLifetime.TimeUntil90Percent,UpdateSourceTrigger=PropertyChanged}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="T50 (hrs): "></TextBlock>
                    <TextBlock Text="{Binding TheLifetime.TimeUntil50Percent,UpdateSourceTrigger=PropertyChanged}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Total hrs: "></TextBlock>
                    <TextBlock Text="{Binding TheLifetime.TotalHoursElapsed,UpdateSourceTrigger=PropertyChanged}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Days aged: "></TextBlock>
                    <TextBlock Text="{Binding DaysBetweenDeviceFabAndLifetimeTest,UpdateSourceTrigger=PropertyChanged}"/>
                </WrapPanel>
            </StackPanel>
        </Border>
    </DataTemplate>
    <DataTemplate x:Key="LJVScanDataTemplate">

    </DataTemplate>
    <DataTemplate x:Key="ELSpectrasDataTemplate">

    </DataTemplate>
    <DataTemplate x:Key="LJVScanSummaryVMDataTemplate">
        <DataTemplate.Resources>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            </Style>
        </DataTemplate.Resources>
        <Border Background="LightGray" BorderBrush="DarkGray" BorderThickness="1">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" FontWeight="Bold" FontSize="13" Text="{Binding TheLJVScanSummary.Device.Label}" HorizontalAlignment="Left"/>
                    <TextBlock Grid.Row="0" FontWeight="Bold" FontSize="13" Text="{Binding TheLJVScanSummary.TestCondition}" HorizontalAlignment="Right"/>
                </Grid>
                <Grid ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Grid.Row="0">__Mean__</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="0">__Min__</TextBlock>
                    <TextBlock Grid.Column="3" Grid.Row="0">__Max__</TextBlock>
                    <TextBlock Grid.Column="4" Grid.Row="0">__Std Dev.__</TextBlock>

                    <TextBlock Grid.Column="0" Grid.Row="1">PeakEQE</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="2">Peak λ</TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="3">FWHM</TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding PeakEQE.Mean}"></TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding PeakEQE.Min}"></TextBlock>
                    <TextBlock Grid.Column="3" Grid.Row="1" Text="{Binding PeakEQE.Max}"></TextBlock>
                    <TextBlock Grid.Column="4" Grid.Row="1" Text="{Binding PeakEQE.StdDev}"></TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding PeakLambda.Mean}"></TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="2" Text="{Binding PeakLambda.Min}"></TextBlock>
                    <TextBlock Grid.Column="3" Grid.Row="2" Text="{Binding PeakLambda.Max}"></TextBlock>
                    <TextBlock Grid.Column="4" Grid.Row="2" Text="{Binding PeakLambda.StdDev}"></TextBlock>

                    <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding FWHM.Mean}"></TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="3" Text="{Binding FWHM.Min}"></TextBlock>
                    <TextBlock Grid.Column="3" Grid.Row="3" Text="{Binding FWHM.Max}"></TextBlock>
                    <TextBlock Grid.Column="4" Grid.Row="3" Text="{Binding FWHM.StdDev}"></TextBlock>

                </Grid>
            </StackPanel>
        </Border>
    </DataTemplate>

