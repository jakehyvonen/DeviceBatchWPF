                            <TextBox Grid.Column="1" Text="{Binding Thickness}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Rate (Å/s): " HorizontalAlignment="Left"></TextBlock>
                            <TextBox Grid.Column="1" Text="{Binding DepositionRate}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Pressure (mbar): " HorizontalAlignment="Left"></TextBlock>
                            <TextBox Grid.Column="1" Text="{Binding BackPressure}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                        </Grid>
                    </WrapPanel>
                </Expander>
            </WrapPanel>
        </Border>
    </DataTemplate>
    <DataTemplate x:Key="EditEncapsulationTemplate">
        <DataTemplate.Resources>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="MinWidth" Value="10"></Setter>
                <Setter Property="TextAlignment" Value="Center"></Setter>
            </Style>
        </DataTemplate.Resources>
        <Border Background="GhostWhite" BorderBrush="DarkGray" BorderThickness="1">
            <WrapPanel Orientation="Vertical" VerticalAlignment="Top">
                <TextBlock HorizontalAlignment="Center" Foreground="Crimson" Text="{Binding PhysicalRole.LongName}"></TextBlock>
                <TextBlock  Text="Material: " HorizontalAlignment="Left"></TextBlock>

                <StackPanel Orientation="Horizontal">
                    <ComboBox
                        ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}},Path=DataContext.MaterialsToAdd}"
                        SelectedItem="{Binding Material, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        DisplayMemberPath="Name"
                        MinWidth="33"
                        >
                    </ComboBox>
                    <Button
                        FontFamily="Marlett"
                        FontSize="13"
                        Content="r"
                        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.DeleteLayer}" 
                        CommandParameter="{Binding}"
                        ></Button>
                </StackPanel>
                <WrapPanel Orientation="Horizontal">
                    <TextBlock  Text="Cure Time (m): " HorizontalAlignment="Left"></TextBlock>
                    <TextBox Text="{Binding CureTime}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                </WrapPanel>
                <WrapPanel Orientation="Vertical">
                    <TextBlock Text="Cure Condition: " HorizontalAlignment="Left"></TextBlock>
                    <TextBox MinWidth="77" Text="{Binding CureCondition}" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
                </WrapPanel>
                <Expander Header="Details">
                    <WrapPanel Orientation="Vertical">

                        <WrapPanel Orientation="Horizontal">
                            <TextBlock Grid.Column="0" Text="Environment: " HorizontalAlignment="Left"></TextBlock>
                            <TextBox Grid.Column="1" Text="{Binding AmbientEnvironment}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal">
                            <TextBlock Grid.Column="0" Text="Cover Glass: " HorizontalAlignment="Left"></TextBlock>
                            <TextBox MinWidth="77" Text="{Binding CoverGlassStyle}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                        </WrapPanel>
                    </WrapPanel>
                </Expander>
            </WrapPanel>
        </Border>
    </DataTemplate>
