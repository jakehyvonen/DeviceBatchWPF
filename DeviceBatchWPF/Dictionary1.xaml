    <DataTemplate x:Key="PatternedTCODataTemplate">
        <DataTemplate.Resources>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="MinWidth" Value="10"></Setter>
                <Setter Property="TextAlignment" Value="Center"></Setter>
                <Setter Property="IsEnabled" Value="{Binding EditingEnabled}"/>
            </Style>
        </DataTemplate.Resources>
        <Border Background="LightGoldenrodYellow" BorderBrush="DarkGray" BorderThickness="1">
            <StackPanel VerticalAlignment="Top">
                <TextBlock HorizontalAlignment="Center" Foreground="Crimson" Text="{Binding PhysicalRole.LongName}"></TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBox FontWeight="Bold" Text="{Binding Material.Supplier}" VerticalAlignment="Center"  HorizontalAlignment="Right"></TextBox>
                    <TextBlock></TextBlock>
                    <TextBox FontWeight="Bold" Text="{Binding Material.Name}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                </StackPanel>
                <Expander Header="Details">
                    <StackPanel>
                        <WrapPanel>
                            <TextBlock VerticalAlignment="Center" Margin="1"  Text="Sheet Res. (Ω/□): " HorizontalAlignment="Left"></TextBlock>
                            <TextBox Text="{Binding SheetResistance}" VerticalAlignment="Center"  HorizontalAlignment="Right"></TextBox>
                        </WrapPanel>
                        <WrapPanel>
                            <TextBlock VerticalAlignment="Center" Margin="1"  Text="Thickness (nm): " HorizontalAlignment="Left"></TextBlock>
                            <TextBox Text="{Binding Thickness}" VerticalAlignment="Center"  HorizontalAlignment="Right"></TextBox>
                        </WrapPanel>
                        <WrapPanel>
                            <TextBlock VerticalAlignment="Center" Margin="1"  Text="Comment: " HorizontalAlignment="Left"></TextBlock>
                            <TextBox Text="{Binding Comment}" VerticalAlignment="Center"  HorizontalAlignment="Right" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
                        </WrapPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>
    </DataTemplate>
    <DataTemplate x:Key="SpinCoatedLayerDataTemplate">
        <DataTemplate.Resources>
            <Style TargetType="{x:Type TextBlock}">

            </Style>
        </DataTemplate.Resources>
        <Border Background="LightBlue" BorderBrush="DarkGray" BorderThickness="1">
            <WrapPanel Orientation="Vertical">
                <TextBlock HorizontalAlignment="Center" Foreground="Crimson" Text="{Binding PhysicalRole.LongName}"></TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Text="{Binding Solution.Material.Name}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock VerticalAlignment="Center" Text=" in " HorizontalAlignment="Left"></TextBlock>
                    <TextBlock FontWeight="Bold" Text="{Binding Solution.Solvent}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Text="{Binding Solution.Concentration}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock VerticalAlignment="Center" Text=" mg/mL, " HorizontalAlignment="Left"></TextBlock>
                    <TextBlock FontWeight="Bold" Text="{Binding RPM}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock VerticalAlignment="Center" Text=" RPM, " HorizontalAlignment="Left"></TextBlock>
                    <TextBlock FontWeight="Bold" Text="{Binding SpinCoatDuration}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock VerticalAlignment="Center" Text="s" HorizontalAlignment="Left"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" Text="{Binding AnnealTemp}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock VerticalAlignment="Center" Text="C, " HorizontalAlignment="Left"></TextBlock>
                    <TextBlock FontWeight="Bold" Grid.Column="1" Text="{Binding AnnealDuration}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock VerticalAlignment="Center" Text="m bake" HorizontalAlignment="Left"></TextBlock>

                </StackPanel>

                <Expander Header="Details">
                    <WrapPanel Orientation="Vertical" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="Comment: " HorizontalAlignment="Left"></TextBlock>
                            <TextBox TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding Comment}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="Prep Date: " HorizontalAlignment="Left"></TextBlock>
                            <TextBox Text="{Binding Material.DateReceivedOrSynthesized, StringFormat=dd-MM-yyyy}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBox>
                        </StackPanel>
                    </WrapPanel>
                </Expander>
            </WrapPanel>
        </Border>
    </DataTemplate>
